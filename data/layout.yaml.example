variables:
  current_time:
    type: time
    color: red
  current_date:
    type: date
    color: yellow
  static_text:
    type: static
    text: "Betabrite Sign Test"
messages:
  - data:
      - current_time
      - current_date
    mode: hold
  - data:
      - static_text
    mode: "rotate"
    color: "rainbow1"
